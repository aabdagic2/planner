<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar2"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationX="290dp"
        android:translationY="20dp"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextClock
        android:id="@+id/txtClo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="6dp"
        android:format12Hour="@null"
        android:format24Hour="MMM dd, yyyy k:mm"
        android:textColor="#84c189"
        android:textSize="35sp"
        android:textStyle="bold"
        android:translationX="90dp"
        android:translationY="60dp"
        android:typeface="serif"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/toDo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="376dp"
        android:layout_height="382dp"
        android:isScrollContainer="true"
        android:scaleX="1"
        android:scaleY="1"
        android:translationX="15dp"
        android:translationY="130dp"
        app:srcCompat="@drawable/rectangle"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="290dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#9E2525"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:translationX="335dp"
        android:translationY="460dp"
        app:srcCompat="@drawable/_25722291556277116_20"
        app:tint="#373737"
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="621dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toDo"
        android:layout_width="345dp"
        android:layout_height="293dp"
        android:padding="4dp"
        android:scrollbars="horizontal"
        android:translationX="30dp"
        android:translationY="155dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="321dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="690dp"
        android:textColor="#3a743f"
        android:textSize="30sp"
        android:translationX="45dp"
        android:translationY="20dp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/progress_bar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="55dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#84c189"
        android:textSize="16sp"
        android:translationX="311dp"
        android:translationY="53dp"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="225dp" />
</RelativeLayout>